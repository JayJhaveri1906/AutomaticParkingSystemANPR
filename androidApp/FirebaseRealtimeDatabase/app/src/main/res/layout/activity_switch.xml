<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFC107"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="com.example.database.SwitchActivity">

	<ImageView
		android:layout_width="254dp"
		android:layout_height="183dp"
		android:layout_above="@+id/button_zone"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="104dp"
		android:contentDescription="@string/app_name"
		android:src="@drawable/logo" />

	<LinearLayout
		android:id="@+id/button_zone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_basic"
			style="?android:attr/button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="gotoBasic"
			android:text="@string/btn_basic"
			android:textAllCaps="false" />

		<Button
			android:id="@+id/btn_advance"
			style="?android:attr/button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="gotoAdvance"
			android:text="@string/btn_advance"
			android:textAllCaps="false" />

	</LinearLayout>

</RelativeLayout>